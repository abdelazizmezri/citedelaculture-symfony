    <script>
       function confirmDelete(data){
           console.log(data)
            Lobibox.confirm({
                msg: "Voulez vous supprmier cet offre",
                callback: function ($this, type, ev) {
                    if(type =="yes"){
                        window.location.href = "deleteoffre/"+data
                    }
                }
            });
        }
    </script>
{% endblock %}